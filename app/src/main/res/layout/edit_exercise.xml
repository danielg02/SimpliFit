<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <EditText
        android:id="@+id/edit_exercise_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Exercise Name"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/edit_number_of_sets"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Number of Sets"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/edit_number_of_reps"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint= "Number of Reps"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/edit_weight"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Weight"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/complete_edit_exercise_button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorDeepSkyBlue"
        android:text="Edit"
        android:textColor="@color/colorWhite" />

</LinearLayout>